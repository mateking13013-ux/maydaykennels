---
// TestimonialsSection component â€” Clean white cards on light background
import { testimonials } from '../data/testimonials';
---

<section class="testimonials" id="testimonials">
  <div class="testimonials-container">
    <div class="section-header">
      <span class="section-badge">Testimonials</span>
      <h2 class="section-title">What Our Families Say</h2>
      <p class="section-subtitle">Real stories from families who found their perfect companion with us.</p>
    </div>

    <div class="testimonials-grid">
      {testimonials.map((t) => (
        <div class="testimonial-card">
          <div class="card-rating">
            {Array(t.rating).fill(null).map(() => (
              <svg class="star" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
            ))}
          </div>
          <p class="card-text">"{t.text}"</p>
          <div class="card-author">
            <div class="author-avatar">
              {t.name.split(' ').map((n: string) => n[0]).join('')}
            </div>
            <div class="author-info">
              <h4>{t.name}</h4>
              <p>{t.location}</p>
            </div>
          </div>
          <span class="puppy-tag">Adopted {t.puppyName}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #f8f9fa;
    padding: 5rem 1.5rem;
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-badge {
    display: inline-block;
    background: rgba(46, 134, 171, 0.1);
    color: #2E86AB;
    padding: 0.4rem 1.25rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 800;
    color: #1a2332;
    margin: 0 0 0.5rem;
  }

  .section-subtitle {
    font-size: 1.05rem;
    color: #777;
    margin: 0;
    max-width: 500px;
    margin: 0 auto;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .testimonial-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .card-rating {
    display: flex;
    gap: 2px;
    margin-bottom: 1.25rem;
  }

  .star {
    width: 20px;
    height: 20px;
    fill: #f59e0b;
  }

  .card-text {
    font-size: 0.95rem;
    line-height: 1.7;
    color: #4a4a4a;
    margin: 0 0 1.5rem;
    flex-grow: 1;
    font-style: italic;
  }

  .card-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .author-avatar {
    width: 44px;
    height: 44px;
    background: #1a2332;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.85rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .author-info h4 {
    margin: 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: #1a2332;
  }

  .author-info p {
    margin: 0;
    font-size: 0.82rem;
    color: #888;
  }

  .puppy-tag {
    display: inline-flex;
    align-items: center;
    background: rgba(46, 134, 171, 0.08);
    color: #2E86AB;
    padding: 0.4rem 0.9rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 600;
    width: fit-content;
  }

  @media (max-width: 900px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
      margin: 0 auto;
    }
  }

  @media (max-width: 600px) {
    .testimonials { padding: 3rem 1rem; }
    .section-title { font-size: 1.75rem; }
    .testimonial-card { padding: 1.5rem; }
  }
</style>
