---
// HeroSection component - Full-bleed image slider with overlay content
const slides = [
  { image: '/images/unnamed (6).jpg', alt: 'Happy puppy from Paws Happiness' },
  { image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/05/LOTTIE-11.jpeg', alt: 'Adorable puppy ready for home' },
  { image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/05/SKAI.jpg', alt: 'Beautiful puppy companion' },
  { image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/05/MISHA-6.jpeg', alt: 'Cute puppy looking for a home' }
];
---

<section class="hero" id="home">
  <!-- Background Slider -->
  <div class="hero-slider">
    <div class="slider-track">
      {slides.map((slide) => (
        <div class="slide">
          <img src={slide.image} alt={slide.alt} loading="eager">
        </div>
      ))}
    </div>
  </div>

  <!-- Dark gradient overlay -->
  <div class="hero-overlay"></div>

  <!-- Content -->
  <div class="hero-inner">
    <div class="hero-content">
      <span class="hero-label">Paws Happiness</span>
      <h1 class="hero-title">
        Find Your Perfect<br>
        <span>Furry Companion</span>
      </h1>
      <p class="hero-description">
        We connect wonderful families with happy, healthy puppies from
        our carefully selected breeding program. Your perfect furry companion
        is waiting for you.
      </p>
      <div class="hero-cta">
        <a href="/about-us" class="btn-hero-primary">
          About Us
          <svg viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
        <a href="/health-guarantee" class="btn-hero-secondary">
          Health Guarantee
        </a>
      </div>
    </div>

    <!-- Feature badges -->
    <div class="hero-badges">
      <div class="badge">
        <svg viewBox="0 0 24 24"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
        <span>Family Raised</span>
      </div>
      <div class="badge">
        <svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-5.5-2.5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5-1.5.67-1.5 1.5.67 1.5 1.5 1.5zm11 0c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5-1.5.67-1.5 1.5.67 1.5 1.5 1.5zm-8.5-4c.83 0 1.5-.67 1.5-1.5S9.83 10.5 9 10.5s-1.5.67-1.5 1.5.67 1.5 1.5 1.5zm6 0c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5-1.5.67-1.5 1.5.67 1.5 1.5 1.5zm-3-3c.83 0 1.5-.67 1.5-1.5S12.83 8 12 8s-1.5.67-1.5 1.5.67 1.5 1.5 1.5z"/></svg>
        <span>Multiple Breeds</span>
      </div>
      <div class="badge">
        <svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
        <span>Health Guaranteed</span>
      </div>
      <div class="badge">
        <svg viewBox="0 0 24 24"><path d="M16.5 3c-1.74 0-3.41.81-4.5 2.09C10.91 3.81 9.24 3 7.5 3 4.42 3 2 5.42 2 8.5c0 3.78 3.4 6.86 8.55 11.54L12 21.35l1.45-1.32C18.6 15.36 22 12.28 22 8.5 22 5.42 19.58 3 16.5 3zm-4.4 15.55l-.1.1-.1-.1C7.14 14.24 4 11.39 4 8.5 4 6.5 5.5 5 7.5 5c1.54 0 3.04.99 3.57 2.36h1.87C13.46 5.99 14.96 5 16.5 5c2 0 3.5 1.5 3.5 3.5 0 2.89-3.14 5.74-7.9 10.05z"/></svg>
        <span>Emotional Support</span>
      </div>
    </div>

    <!-- Slider controls -->
    <div class="hero-controls">
      <button class="slider-arrow slider-prev" aria-label="Previous slide">&#10094;</button>
      <div class="slider-dots">
        {slides.map((_, i) => (
          <button class={`slider-dot ${i === 0 ? 'active' : ''}`} data-index={i} aria-label={`Go to slide ${i + 1}`}></button>
        ))}
      </div>
      <button class="slider-arrow slider-next" aria-label="Next slide">&#10095;</button>
    </div>
  </div>
</section>

<script>
  let currentSlide = 0;
  let slideInterval: ReturnType<typeof setInterval> | null = null;
  const slides = document.querySelectorAll('.hero .slide');
  const track = document.querySelector('.hero .slider-track') as HTMLElement;
  const dots = document.querySelectorAll('.hero .slider-dot');
  const prevBtn = document.querySelector('.hero .slider-prev');
  const nextBtn = document.querySelector('.hero .slider-next');

  function updateSlider() {
    if (track) {
      track.style.transform = `translateX(-${currentSlide * 100}%)`;
    }
    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentSlide);
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % slides.length;
    updateSlider();
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    updateSlider();
  }

  function goToSlide(index: number) {
    currentSlide = index;
    updateSlider();
  }

  function startAutoSlide() {
    slideInterval = setInterval(nextSlide, 5000);
  }

  function stopAutoSlide() {
    if (slideInterval) {
      clearInterval(slideInterval);
    }
  }

  prevBtn?.addEventListener('click', () => {
    stopAutoSlide();
    prevSlide();
    startAutoSlide();
  });

  nextBtn?.addEventListener('click', () => {
    stopAutoSlide();
    nextSlide();
    startAutoSlide();
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      stopAutoSlide();
      goToSlide(index);
      startAutoSlide();
    });
  });

  startAutoSlide();
</script>

<style>
  .hero {
    position: relative;
    width: 100%;
    min-height: 500px;
    display: flex;
    align-items: center;
    overflow: hidden;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
  }

  /* Full-bleed background slider */
  .hero-slider {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .slider-track {
    display: flex;
    height: 100%;
    transition: transform 0.8s ease-in-out;
  }

  .slide {
    min-width: 100%;
    height: 100%;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Gradient overlay for text readability */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(26, 35, 50, 0.88) 0%,
      rgba(26, 35, 50, 0.7) 40%,
      rgba(26, 35, 50, 0.3) 70%,
      rgba(26, 35, 50, 0.15) 100%
    );
    z-index: 1;
  }

  /* Content layer */
  .hero-inner {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    padding: 9rem 2rem 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 600px;
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-label {
    display: inline-block;
    background: rgba(232, 93, 117, 0.25);
    color: #FFB5C5;
    padding: 0.4rem 1.25rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 1.25rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(232, 93, 117, 0.3);
  }

  .hero-title {
    font-size: 3.25rem;
    font-weight: 800;
    line-height: 1.15;
    color: #ffffff;
    margin: 0 0 1.25rem;
    letter-spacing: -0.5px;
  }

  .hero-title span {
    color: #E85D75;
    display: inline;
  }

  .hero-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 2rem;
    max-width: 520px;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-hero-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #E85D75;
    color: white;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(232, 93, 117, 0.4);
  }

  .btn-hero-primary:hover {
    background: #C9405A;
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(232, 93, 117, 0.5);
    color: white;
  }

  .btn-hero-primary svg {
    width: 18px;
    height: 18px;
    fill: none;
    stroke: currentColor;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .btn-hero-secondary {
    display: inline-flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.12);
    color: white;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.25);
  }

  .btn-hero-secondary:hover {
    background: rgba(255, 255, 255, 0.22);
    transform: translateY(-3px);
    color: white;
  }

  /* Feature badges row at bottom */
  .hero-badges {
    display: flex;
    gap: 1rem;
    margin-top: 3rem;
    flex-wrap: wrap;
  }

  .badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 0.6rem 1.1rem;
    border-radius: 50px;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .badge:hover {
    background: rgba(232, 93, 117, 0.25);
    border-color: rgba(232, 93, 117, 0.4);
  }

  .badge svg {
    width: 18px;
    height: 18px;
    fill: #E85D75;
    flex-shrink: 0;
  }

  /* Slider controls */
  .hero-controls {
    position: absolute;
    bottom: 2.5rem;
    right: 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 3;
  }

  .slider-dots {
    display: flex;
    gap: 0.5rem;
  }

  .slider-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .slider-dot.active {
    background: #E85D75;
    border-color: #E85D75;
    transform: scale(1.2);
  }

  .slider-dot:hover {
    background: rgba(255, 255, 255, 0.6);
  }

  .slider-arrow {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.25);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    color: white;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
  }

  .slider-arrow:hover {
    background: #E85D75;
    border-color: #E85D75;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .hero {
      min-height: 500px;
    }

    .hero-inner {
      min-height: 550px;
      padding: 8rem 1.5rem 2.5rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1rem;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero {
      min-height: 500px;
    }

    .hero-overlay {
      background: linear-gradient(
        180deg,
        rgba(26, 35, 50, 0.75) 0%,
        rgba(26, 35, 50, 0.6) 50%,
        rgba(26, 35, 50, 0.85) 100%
      );
    }

    .hero-inner {
      min-height: 550px;
      padding: 8rem 1.25rem 5rem;
      justify-content: center;
      text-align: center;
    }

    .hero-content {
      max-width: 100%;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .hero-description {
      font-size: 0.95rem;
      max-width: 100%;
    }

    .hero-cta {
      justify-content: center;
    }

    .hero-badges {
      justify-content: center;
      margin-top: 2rem;
      gap: 0.75rem;
    }

    .badge {
      font-size: 0.8rem;
      padding: 0.5rem 0.9rem;
    }

    .hero-controls {
      bottom: 1.5rem;
      right: 50%;
      transform: translateX(50%);
    }
  }

  /* Small mobile */
  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.85rem;
    }

    .hero-label {
      font-size: 0.75rem;
    }

    .btn-hero-primary,
    .btn-hero-secondary {
      padding: 0.85rem 1.5rem;
      font-size: 0.9rem;
    }

    .badge {
      font-size: 0.75rem;
      padding: 0.4rem 0.75rem;
    }

    .badge svg {
      width: 15px;
      height: 15px;
    }
  }
</style>
