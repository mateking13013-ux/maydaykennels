---
// FeaturedPuppies component â€” Modern card grid
const puppies = [
  { name: 'Digby', gender: 'Male', image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/08/DIGBY.jpg' },
  { name: 'Tessa', gender: 'Female', image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/08/TESSA.jpg' },
  { name: 'Moo Moo', gender: 'Female', image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/08/Moo-Moo.jpg' },
  { name: 'Scout', gender: 'Male', image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/05/SCOUT.jpg' },
  { name: 'Odin', gender: 'Male', image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/04/ODIN-1.jpg' },
  { name: 'Bentley', gender: 'Male', image: 'https://deepskyblue-goldfinch-819888.hostingersite.com/wp-content/uploads/2025/04/BENTLEY.jpg' },
];
---

<section class="puppies-section">
  <div class="section-container">
    <div class="section-header">
      <span class="section-badge">Our Puppies</span>
      <h2 class="section-title">Meet Your New Best Friend</h2>
      <p class="section-subtitle">Healthy, happy puppies ready for their forever homes</p>
    </div>

    <div class="puppies-grid">
      {puppies.map((puppy) => (
        <div class="puppy-card">
          <div class="card-img">
            <img src={puppy.image} alt={puppy.name} loading="lazy">
            <div class="card-overlay">
              <span class="puppy-gender">{puppy.gender}</span>
              <h3 class="puppy-name">{puppy.name}</h3>
              <button class="btn-inquire" onclick={`openContactPopup('${puppy.name} (${puppy.gender})')`}>
                Inquire Now
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .puppies-section {
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #f8f9fa;
    padding: 5rem 1.5rem;
  }

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-badge {
    display: inline-block;
    background: rgba(232, 93, 117, 0.1);
    color: #E85D75;
    padding: 0.4rem 1.25rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 800;
    color: #2D1F3D;
    margin: 0 0 0.5rem;
  }

  .section-subtitle {
    font-size: 1.05rem;
    color: #777;
    margin: 0;
  }

  .puppies-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .puppy-card {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    background: white;
  }

  .card-img {
    position: relative;
    height: 320px;
    overflow: hidden;
  }

  .card-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .puppy-card:hover .card-img img {
    transform: scale(1.08);
  }

  .card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    background: linear-gradient(0deg, rgba(26, 35, 50, 0.9) 0%, rgba(26, 35, 50, 0.4) 60%, transparent 100%);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.35rem;
  }

  .puppy-gender {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
  }

  .puppy-name {
    font-size: 1.35rem;
    font-weight: 700;
    color: white;
    margin: 0;
  }

  .btn-inquire {
    margin-top: 0.5rem;
    background: #E85D75;
    color: white;
    border: none;
    padding: 0.55rem 1.25rem;
    border-radius: 50px;
    font-size: 0.82rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(8px);
  }

  .puppy-card:hover .btn-inquire {
    opacity: 1;
    transform: translateY(0);
  }

  .btn-inquire:hover {
    background: #C9405A;
  }

  @media (max-width: 900px) {
    .puppies-grid { grid-template-columns: repeat(2, 1fr); }
    .card-img { height: 280px; }
    .btn-inquire { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 600px) {
    .puppies-section { padding: 3rem 1rem; }
    .section-title { font-size: 1.75rem; }
    .puppies-grid { grid-template-columns: 1fr; }
    .card-img { height: 300px; }
  }
</style>
